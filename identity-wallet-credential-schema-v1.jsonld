{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id", "name"]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"]
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "claims": {
          "type": "object",
          "properties": {
            "userID": {
              "type": "string"
            }
          },
          "required": ["userID"]
        },
        "design": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "brand": {
              "type": "object",
              "properties": {
                "QIKNET": {
                  "type": "string"
                }
              },
              "required": ["QIKNET"]
            },
            "image": {
              "type": "string",
              "format": "uri"
            },
            "bgColor": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          },
          "required": [""]
        }
      },
      "required": ["id"]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "proofPurpose": {
          "type": "string"
        },
        "verificationMethod": {
          "type": "string"
        },
        "proofValue": {
          "type": "string"
        }
      },
      "required": ["type", "created", "proofPurpose", "verificationMethod", "proofValue"]
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSchema",
    "credentialSubject",
    "proof"
  ]
}
